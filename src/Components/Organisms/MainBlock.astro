---
const { title, subtitle, noButton = false } = Astro.props;
---

<div class="SmContainer">
  <div class="firstBlock">
    <h1>{title}</h1>
    <p>{subtitle}</p>
    {noButton ? null : <a href="">Desc√°rgalo ya!</a>}
  </div>
</div>

<style lang="scss">

	.SmContainer{
		display: flex;
		justify-content: center;
		align-items: center;
		max-width: 857px;
		margin: 0 auto;
	}
  .firstBlock {
    justify-self: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 24px;
    h1 {
      font-size: 64px;
      font-weight: 400;
      text-align: center;
    }
    p {
      color: #828282;
      text-align: center;
      font-size: 24px;
      font-family: "Plus Jakarta Sans";
    }
    a {
      text-decoration: none;
      color: #ffffff;
      background-color: #000;
      border-radius: 32px;
      box-shadow: 0px 1px 2px 0px #000000;
      font-size: 16;
      font-family: "Plus Jakarta Sans";
      padding: 14px 24px;
    }
  }

  @media (max-width: 768px) {
  .SmContainer {
    padding: 0 20px;
  }

  .firstBlock {
    h1 {
      font-size: 36px;
    }
    p {
      font-size: 18px;
    }
    a {
      font-size: 14px;
      padding: 10px 20px;
    }
  }
}

</style>
