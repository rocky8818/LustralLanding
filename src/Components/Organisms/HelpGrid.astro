---
import Card from '../Molecules/HelpCard.astro';
---

<div class="container-large">
  <div class="grid">
    <Card href="ayuda/crear-cuenta" title="Como crear una cuenta" subtitle="Iniciando tu viaje en lustral" imageUrl="/images/helpcards/newaccount.svg" />
    <Card href="ayuda/eliminar-cuenta" title="Coo eliminar tu cuenta" subtitle="Una forma sencilla y clara" imageUrl="/images/helpcards/deleteaccount.svg" />
    <Card href="ayuda/sin-contrasenas" title="Sin contraseñas" subtitle="Para mayor privacidad de los usuarios" imageUrl="/images/helpcards/nopasswords.svg" />
    <Card href="ayuda/landing" title="Creando tu Landing Page" subtitle="Tu propio sitio de tu evento" imageUrl="/images/helpcards/landing.svg" />
    <Card href="ayuda/backup" title="Como crear un Respaldo" subtitle="Proteger la informacion de tu evento" imageUrl="/images/helpcards/backup.svg" />
    <Card href="ayuda/premium" title="Contratar o cancelar Premium" subtitle="La mejor forma de usar Lustrall" imageUrl="/images/helpcards/premium.svg" />
  </div>
</div>

<style lang="scss">
  .container-large {
    margin: 0 auto;
    max-width: 1270px;
    width: 100%;
    padding: 0 80px; /* Mantiene los márgenes laterales grandes en pantallas anchas */
    box-sizing: border-box;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin: 80px auto;
  }

  @media (max-width: 1270px) {
    .container-large {
      max-width: 989px;
      padding: 0 40px;
    }

    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .container-large {
      padding: 0 20px; /* Reduce los márgenes laterales en pantallas móviles */
    }

    .grid {
      grid-template-columns: 1fr;
      gap: 15px; /* Ajusta el espacio entre las tarjetas para pantallas más pequeñas */
      margin: 40px auto;
    }
  }
</style>
