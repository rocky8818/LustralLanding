---
const menuItems = [
  { label: 'Inicio', href: '/' },
  { label: 'Centro de Ayuda', href: '/ayuda' },
  { label: 'Descargar app', href: '/descargar' },
];
let language = 'ES';
---

<nav class="navbar">
  <div class="logo">
    <img src="/images/LustralLogo.svg" alt="Logo Lustral" width="100" />
  </div>
  <ul class="menu">
    {menuItems.map(item => (
      <li><a href={item.href}>{item.label}</a></li>
    ))}
    <li class="language-switcher">
      <button>{language}</button>
    </li>
  </ul>
  <button class="hamburger-menu" aria-label="Toggle menu">
    &#9776;
  </button>
</nav>

<!-- Menú desplegable móvil -->
<div class="mobile-menu">
  <ul>
    {menuItems.map(item => (
      <li><a href={item.href}>{item.label}</a></li>
    ))}
    <li class="language-switcher">
      <button>{language}</button>
    </li>
  </ul>
</div>

<style>
  

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 170px;
    padding: 0 20px;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
  }

  .logo img {
    height: 100px;
  }

  .menu {
    display: flex;
    list-style: none;
    gap: 20px;
  }

  .menu li {
    display: inline;
  }

  .menu li a {
    text-decoration: none;
    font-size: 18px;
    color: #333;
  }

  .language-switcher button {
    background: none;
    border: none;
    font-size: 18px;
    cursor: pointer;
  }

  .hamburger-menu {
    display: none;
    background: none;
    border: none;
    font-size: 30px;
    cursor: pointer;
  }

  .mobile-menu {
    display: none;
  }

  /* Estilos para móviles */
  @media (max-width: 768px) {
    .menu {
      display: none;
    }

    .hamburger-menu {
      display: block;
    }

    .mobile-menu {
      display: none;
      background-color: #fff;
      position: absolute;
      top: 170px;
      right: 0;
      width: 100%;
      border-top: 1px solid #ddd;
    }

    .mobile-menu ul {
      list-style: none;
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .mobile-menu ul li {
      text-align: center;
    }
  }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const menuButton = document.querySelector('.hamburger-menu') as HTMLElement | null;
      const mobileMenu = document.querySelector('.mobile-menu') as HTMLElement | null;
  
      if (menuButton && mobileMenu) {
        menuButton.addEventListener('click', () => {
          if (mobileMenu.style.display === 'block') {
            mobileMenu.style.display = 'none';
          } else {
            mobileMenu.style.display = 'block';
          }
        });
      }
    });
  </script>
  
