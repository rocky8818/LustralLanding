---
import Favicons from "../Components/Atoms/Favicons.astro";
import Footer from "../Components/Organisms/Footer.astro";
import Nav from "../Components/Organisms/Nav.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <!-- icon -->

    <Favicons />

    <meta name="theme-color" content="#ffffff" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <meta property="og:locale" content="es_ES" />
    <meta property="og:type" content="website" />
    <meta
      property="og:site_name"
      content="Lustral | Wedding planner"
    />
    <meta
      property="og:title"
      content="Lustral | Wedding planner"
    />
    <meta
      property="og:description"
      content="Lustral | Wedding planner"
    />
    <meta
      property="og:url"
      content=""
    />
    <meta
      property="og:image"
      content=""
    />
    <meta property="og:image:type" content="image/jpeg" />
    <meta
      property="og:image:secure_url"
      content=""
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="600" />

    <link
      itemprop="thumbnailUrl"
      href=""
    />
  </head>
  <body>
    <Nav />
    <slot />
    <Footer/>
    <style is:global lang="scss">
      // ðŸ¤– reset
      *,
      *::before,
      *::after {
        box-sizing: border-box;

        // Delete background blue in chome
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      }

      body,
      html {
        margin: 0;
        padding: 0;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        text-wrap: balance;
      }

      p {
        text-wrap: pretty;
      }

      /**
 * 1. Remove the bottom border in Chrome 57-
 * 2. Add the correct text decoration in Chrome, Edge, IE, Opera, and Safari.
 */

      abbr[title] {
        border-bottom: none;
        /* 1 */
        text-decoration: underline;
        /* 2 */
        text-decoration: underline dotted;
        /* 2 */
      }

      b,
      strong {
        font-weight: bolder;
      }

      /**
 * 1. Change the font styles in all browsers.
 * 2. Remove the margin in Firefox and Safari.
 */

      button,
      input,
      optgroup,
      select,
      textarea {
        font-family: inherit;
        /* 1 */
        font-size: 100%;
        /* 1 */
        line-height: 1.15;
        /* 1 */
        margin: 0;
        /* 2 */
      }

      /**
 * Remove the inheritance of text transform in Edge, Firefox, and IE.
 * 1. Remove the inheritance of text transform in Firefox.
 */
      button,
      select {
        /* 1 */
        text-transform: none;
      }

      button,
      [type="button"],
      [type="reset"],
      [type="submit"] {
        -webkit-appearance: button;
      }

      /**
 * Remove the inner border and padding in Firefox.
 */

      button::-moz-focus-inner,
      [type="button"]::-moz-focus-inner,
      [type="reset"]::-moz-focus-inner,
      [type="submit"]::-moz-focus-inner {
        border-style: none;
        padding: 0;
      }

      /**
 * Restore the focus styles unset by the previous rule.
 */

      button:-moz-focusring,
      [type="button"]:-moz-focusring,
      [type="reset"]:-moz-focusring,
      [type="submit"]:-moz-focusring {
        outline: 1px dotted ButtonText;
      }

      /**
 * Correct the padding in Firefox.
 */

      fieldset {
        padding: 0.35em 0.75em 0.625em;
      }

      /**
 * Correct the cursor style of increment and decrement buttons in Chrome.
 */

      [type="number"]::-webkit-inner-spin-button,
      [type="number"]::-webkit-outer-spin-button {
        height: auto;
      }

      //  reset ****************************************************

      @import url("https://fonts.googleapis.com/css2?family=Fraunces:wght@100..900&display=swap");
      @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap');

      // Typography scale
      $fs-base: 16;

      $fs-54: calc(54 / $fs-base) + rem;
      $fs-40: calc(40 / $fs-base) + rem;
      $fs-30: calc(30 / $fs-base) + rem;
      $fs-38: calc(38 / $fs-base) + rem;
      $fs-24: calc(24 / $fs-base) + rem;
      $fs-20: calc(20 / $fs-base) + rem;
      $fs-22: calc(22 / $fs-base) + rem;
      $fs-14: calc(14 / $fs-base) + rem;

      $desktop: 1440px;
      $tablet: 950px;
      $mobile: 480px;

      :root {
        --primary: #ffffff;
        --black: #000000;
        --gray: #1e1e1e;
        --gray-50: #121212;

        --padding: 0 30px;

        --desktop: $desktop;
        --tablet: 950px;
        --mobile: $mobile;

        --fs-54: $fs-54;
        --fs-40: $fs-40;
        --fs-30: $fs-30;
        --fs-38: $fs-38;
        --fs-24: $fs-24;
        --fs-20: calc(20 / $fs-base) + rem;
        --fs-22: $fs-22;
        --fs-14: $fs-14;
      }

      html,
      body {
        padding: 0;
        background: var(--primary);
        // background-color: #000000;
        font-family: "Fraunces", sans-serif;
      }
      html {
        font-size: $fs-14;
        scroll-behavior: smooth;
        scroll-padding-top: 60px;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        transition: font-size 0.3s ease-in-out;
        padding: 0;
        margin: 0;
        font-family: 'Plus Jakarta Sans', sans-serif;
      }

      p {
        transition: font-size 0.3s ease-in-out;
        padding: 0;
        margin: 0;
      }

      a {
        transition: color 0.3s ease-in-out;
      }

      .t1 {
        font-size: $fs-38;
        font-weight: 900;
        @media only screen and (min-width: $tablet) {
          font-size: $fs-54;
        }
      }

      .t2 {
        font-size: $fs-24;
        font-weight: 400;
        @media only screen and (min-width: $tablet) {
          font-size: $fs-40;
        }
      }

      .t3 {
        font-size: $fs-30;
        font-weight: 700;
      }

      .t4 {
        font-size: $fs-24;
        font-weight: 400;
      }

      .t5 {
        font-size: $fs-20;
        font-weight: 700;
      }

      .text-up {
        text-transform: uppercase;
      }
      .text-low {
        text-transform: lowercase;
      }
      .text-cap {
        text-transform: capitalize;
      }

      ::selection {
        background: rebeccapurple;
        color: #7deda8
      }

      @keyframes show {
        from {
          opacity: 0;
          scale: 25%;
        }

        to {
          opacity: 1;
          scale: 100%;
        }
      }

      @keyframes sliderL {
        from {
          opacity: 0;
          transform: translateX(100%);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes sliderR {
        from {
          opacity: 0;
          transform: translateX(-100%);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      .show {
        view-timeline-name: --image;
        view-timeline-axis: block;

        animation-timeline: --image;
        animation-name: show;

        animation-range: entry 25% cover 30%;
        animation-fill-mode: both;
      }

      .showR {
        view-timeline-name: --image;
        view-timeline-axis: block;

        animation-timeline: --image;
        animation-name: sliderR;

        animation-range: entry 25% cover 30%;
        animation-fill-mode: both;
      }

      .showC {
        view-timeline-name: --image;
        view-timeline-axis: block;

        animation-timeline: --image;
        animation-name: sliderR;

        animation-range: entry 25% cover 30%;
        animation-fill-mode: both;

        @media only screen and (min-width: $tablet) {
          animation-name: show;
        }
      }

      .showL {
        view-timeline-name: --image;
        view-timeline-axis: block;

        animation-timeline: --image;
        animation-name: sliderL;

        animation-range: entry 25% cover 30%;
        animation-fill-mode: both;
      }

      @keyframes skeleton-loading {
        0% {
          background-color: var(--primary);
        }
        100% {
          background-color: var(--gray-50);
        }
      }

      .btn {
        background-color: var(--primary);
        border: 1px var(--primary) solid;

        padding: 8px 16px;
        text-align: center;
        color: white;

        border-radius: 32px;

        transition: background-color 0.3s ease-in-out;

        &:hover {
          color: var(--primary) !important;
          background-color: var(--gray);
          border: 1px white solid;
        }
      }

      .btn-black {
        display: inline-block;
        border: 1px var(--black) solid;
        color: var(--black);
        text-decoration: none;
        text-align: center;
        padding: 8px 16px;
        border-radius: 32px;
        font-size: $fs-20;
        transition: background-color 0.3s ease-in-out;

        &:hover {
          background-color: var(--black);
          color: var(--primary);
        }
      }

      .bg-001 {
        background-position-x: center;

        @media only screen and (min-width: $tablet) {
          // background-repeat: space;
        }
      }
    </style>
  </body>
</html>
